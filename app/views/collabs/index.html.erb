<div class="row">
	<div class="col-9 text-center">
		<h3>Collaborateurs </h3>
	</div>
	<br>
	<div class="col-3 ">
		<%= link_to "Nouveau collaborateur", new_collab_path, class: 'btn btn-info' %>
	</div>
</div>
<% collabs =  @collabs %>
<table class='table table-sm table-hover table-striped'>
	<thead>
		<tr class='' style='height: 50px'>
			<th scope='col' class='align-middle'> ID </th>
			<th scope='col' class='align-middle'> Nom </th>
			<th scope='col' class='align-middle'> Pr√©nom </th>
			<th scope='col' class='align-middle'> Poste </th>
			<th scope='col' class='align-middle'> Ajouter contrat </th>
		</tr>
	</thead>
	<tbody>
		<% collabs.each do |collab| %>
			<tr>
				<td><%= link_to collab[:id], collab %></td>
				<td><%= collab[:lastname] %></td>
				<td><%= collab[:firstname] %></td>
				<td><%= collab.function.try(:title).try(:capitalize) %></td>
				<td><%= link_to "Nouveau contrat".html_safe, new_contract_path + "?collab=#{collab[:id]}" %></td>
			</tr>
		<% end %>
	</tbody>
</table>
