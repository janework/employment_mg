<% firms =  @firms %>
<div class="row">
	<div class="col-9 text-center">
		<h3>Employeurs </h3>
	</div>
	<br>
	<!-- <div class="col-3 ">
		<%= link_to "Nouvel Employeur", new_firm_path, class: 'btn btn-info' %>
